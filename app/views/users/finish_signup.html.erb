<h2>Finish Signup</h2>

<p><%= image_tag(@user.image) %></p>

<%= simple_form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, disabled: true %>
    <%= f.input :name, disabled: true %>
    <%= f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Account" %>
  </div>
<% end %>
